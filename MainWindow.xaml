<Window x:Class="ARVL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARVL"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        
        Title="ARVL" 
        Height="539" Width="480"
        WindowStyle="None" 
        Topmost="True" 
        ResizeMode="NoResize" 
        Icon="/Images/icon.png"
        Background="White"
        FontFamily="Century Gothic" 
        FontSize="16" 
        
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        >

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBlock Text="Plugin by www.LetsBIMtogether.com&#xA;(Version 2.1)"  TextAlignment="Center"  />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image wpfAnimatedGif:ImageBehavior.AnimatedSource="Images/LOGO-ANIMATED-3-WAY-COMPRESS.gif" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" Height="427" Width="418" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" >
            <TextBlock x:Name="TextBlock_Status" Text="* * * Scanning Revit File * * *"  TextAlignment="Center" />
        </StackPanel>
        
    </Grid>
    
</Window>
